<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src='../../common/resource/styles/constants.gss, ../../common/resource/styles/mixins.gss' gss='true'>
		.wrap {
			border: 1px solid #CCC;
			min-height: 50px;
			margin: 15px 15px 20px;
			color: #666;
			 box-shado: 1px 2px 2px #E7E7E7;
		}
		
		.header {
			border-bottom: 1px solid #CCC;
			position: relative;
			min-height: 25px;
		}
		
		.headerName {
			border-right: 1px solid #CCC;
			margin-right: 100px;
			padding: 5px;
		}
		
		.headerEditWrap {
			display: none;
			width: 100px;
			margin: auto;
			height: 100%;
			position: absolute;
			right: 0;
			text-align: center;
			cursor: pointer;
		}
		
		.headerEditWrap:hover {
			background-color: #CCC;
		}
		
		.headerEdit {
			position: absolute;
 			top:50%;
 			left:50%;
 			@mixin transform(translate(-50%, -50%));
		}

		.body {
			padding: 10px;
		}
		
	</ui:style>
	
	<ui:with field="css" type="com.biker.client.common.resource.CoreStyle"></ui:with>
	
	<g:HTMLPanel styleName="{style.wrap}">
		<div class="{style.header}">
			<div class="{style.headerName}">
				Da Bike
			</div>
			<div class="{style.headerEditWrap}">
				<div class="{style.headerEdit}">
					<i class="fa fa-edit"></i>
				</div>
			</div>
		</div>
		<div class="{style.body}">
			-
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 