<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:fast="urn:import:com.biker.client.common.fast">
	<ui:style src='../../common/resource/styles/constants.gss, ../../common/resource/styles/mixins.gss' gss='true'>
		@def EDIT_WIDTH 50px;
		
		.wrap {
			border: 1px solid #CCC;
			min-height: 50px;
			margin: 15px 15px 20px;
			color: #666;
			 box-shadow: 1px 2px 2px #E7E7E7;
		}
		
		.header {
			position: relative;
			border-bottom: 1px solid #CCC;
			min-height: 25px;
			background-color: #E6F4FF;
		}
		
		.headerName {
			border-right: 1px solid #CCC;
			margin-right: EDIT_WIDTH;
			padding: 10px;
		}
		
		.headerEditWrap {
			width: EDIT_WIDTH;
			margin: auto;
			height: 100%;
			position: absolute;
			right: 0;
			text-align: center;
			cursor: pointer;
		}
		
		.headerEditWrap:hover {
			background-color: rgba(179, 229, 255, 0.17);
		}
		
		.headerEdit {
			position: absolute;
 			top:52%;
 			left:53%;
 			font-size: 20px;
 			@mixin transform(translate(-50%, -50%));
		}

		.body {
			padding: 10px;
		}
		
	</ui:style>
	
	<ui:with field="css" type="com.biker.client.common.resource.CoreStyle"></ui:with>
	
	<g:HTMLPanel styleName="{style.wrap}">
		<div class="{style.header}">
			<fast:FastPress ui:field="inventory" styleName="{style.headerEditWrap}">
				<fast:inner>
					<g:HTMLPanel>
						<div class="{style.headerEdit}">
							<i class="fa fa-edit"></i>						
						</div>
					</g:HTMLPanel>
				</fast:inner>
			</fast:FastPress>
			<div class="{style.headerName}">
				Da Bike
			</div>
		</div>
		<div class="{style.body}">
			-
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 